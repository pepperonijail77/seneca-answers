{
	"manifest_version": 3,
	"name": "Seneca Answers",
	"version": "2.0.1",
	"description": "Web extension to get the answers to SenecaLearning lessons",
	"author": "pepperonijail77",
	"homepage_url": "https://github.com/pepperonijail77/seneca-answers",
	"permissions": ["webRequest"],
	"host_permissions": ["https://*.senecalearning.com/*"],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://app.senecalearning.com/*"],
			"css": ["overlay.css"],
			"js": ["content.js"]
		}
	],
	"icons": {
		"32": "icons/icon-32.png",
		"64": "icons/icon-64.png",
		"192": "icons/icon-192.png"
	}
}
