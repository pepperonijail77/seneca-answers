{
  "manifest_version": 3,
  "name": "Seneca Answers",
  "version": "2.0.0",
  "description": "Web extension to get the answers to SenecaLearning lessons",
  "permissions": [
    "webRequest"
  ],
  "host_permissions": [
    "https://*.senecalearning.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://app.senecalearning.com/*"],
      "css": ["overlay.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "192": "icons/icon-192.png"
  }
}